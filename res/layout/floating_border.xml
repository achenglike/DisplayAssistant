<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <View        android:id="@+id/right"        android:layout_width="match_parent"        android:layout_height="@dimen/floating_border_width"        android:layout_alignParentTop="true"        android:background="@color/colorBorder" />    <View        android:id="@+id/down"        android:layout_width="@dimen/floating_border_width"        android:layout_height="match_parent"        android:layout_alignParentRight="true"        android:background="@color/colorBorder" />    <View        android:id="@+id/left"        android:layout_width="match_parent"        android:layout_height="@dimen/floating_border_width"        android:layout_alignParentBottom="true"        android:background="@color/colorBorder" />    <View        android:id="@+id/up"        android:layout_width="@dimen/floating_border_width"        android:layout_height="match_parent"        android:layout_alignParentLeft="true"        android:background="@color/colorBorder" /></RelativeLayout>