<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/layout_lock"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:background="@drawable/lock_layout_bg"    android:paddingLeft="10dp"    android:paddingRight="10dp"    android:alpha="0.6"    android:orientation="horizontal">    <com.lyf.display.view.LockView        android:id="@+id/btn_lock"        android:layout_width="@dimen/floating_lock_button_width"        android:layout_height="@dimen/floating_lock_button_height"        android:layout_marginBottom="6dp"/>    <View        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp"        android:layout_width="1px"        android:layout_height="match_parent"        android:background="#000" />    <com.lyf.display.view.CloseView        android:id="@+id/btn_quit"        android:layout_width="@dimen/floating_lock_button_width"        android:layout_height="@dimen/floating_lock_button_height"        android:layout_marginBottom="6dp" /></LinearLayout>